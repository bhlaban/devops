{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "The name of the administrator account to create"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "The password for the Administrator account"
      }
    },
    "sshPublicKey": {
      "type": "string",
      "metadata": {
        "description": "The public key for SSH access to the VM"
      }
    },
    "domainName": {
      "type": "string",
      "metadata": {
        "description": "The FQDN of the Active Directory Domain to be created"
      },
      "defaultValue": "seicdevops.com"
    },
    "vmSize": {
      "type": "string",
      "metadata": {
        "description": "The size of the VMs to create"
      },
      "defaultValue": "Standard_D4_v3"
    },
    "automationAccountName": {
      "type": "string",
      "metadata": {
        "description": "The name of the automation account"
      },
      "defaultValue": "automation"
    },
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "The base URI where artifacts required by this template are located. When the template is deployed using the accompanying scripts, a private location in the subscription will be used and this value will be automatically generated."
      },
      "defaultValue": "https://raw.githubusercontent.com/bhlaban/devops/master/"
    },
    "_artifactsLocationSasToken": {
      "type": "securestring",
      "metadata": {
        "description": "The sasToken required to access _artifactsLocation.  When the template is deployed using the accompanying scripts, a sasToken will be automatically generated."
      },
      "defaultValue": ""
    }
  },
  "variables": {
    "automationAccountName": "automation",
    "vnetName": "vnet",
    "managementSubnetName": "management-subnet",
    "directorySubnetName": "directory-subnet",
    "webSubnetName": "web-subnet",
    "dataSubnetName": "data-subnet",
    "jumpBoxVmName": "jumpbox01",
    "dcVmName": "dc01",
    "dcIpAddress": "10.0.1.10",
    "dcDscConfigName": "SampleConfig.localhost",
    "jamaVmName": "jama01",
    "jamaIpAddress": "10.0.2.10",
    "tfsVmName": "tfs01",
    "tfsIpAddress": "10.0.2.20",
    "sqlVmName": "sql01",
    "sqlIpAddress": "10.0.3.10",
    "nestedTemplates": {
      "automationAccountTemplate": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/automationAccount.json', parameters('_artifactsLocationSasToken')))]",
      "networkTemplate": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/virtualNetwork.json', parameters('_artifactsLocationSasToken')))]",
      "domainControllerTemplate": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/domainController.json', parameters('_artifactsLocationSasToken')))]",
      "jumpBoxTemplate": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/jumpBox.json', parameters('_artifactsLocationSasToken')))]",
      "sqlTemplate": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/sqlServer.json', parameters('_artifactsLocationSasToken')))]",
      "jamaTemplate": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/jama.json', parameters('_artifactsLocationSasToken')))]",
      "tfsTemplate": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/tfs.json', parameters('_artifactsLocationSasToken')))]"
    }
  },
  "resources": [
    {
      "name": "AutomationAccount",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-09-01",
      "comments": "This creates the automation account",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('nestedTemplates').automationAccountTemplate]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "automationAccountName": {
            "value": "[variables('automationAccountName')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          }
        }
      }
    }
  ]
}