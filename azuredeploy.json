{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "The name of the administrator account to create"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "The password for the Administrator account"
      }
    },
    "sshPublicKey": {
      "type": "string",
      "metadata": {
        "description": "The public key for SSH access to the VM"
      }
    },
    "domainName": {
      "type": "string",
      "metadata": {
        "description": "The FQDN of the Active Directory Domain to be created"
      },
      "defaultValue": "seicdevops.com"
    },
    "vmSize": {
      "type": "string",
      "metadata": {
        "description": "The size of the VMs to create"
      },
      "defaultValue": "Standard_D4_v3"
    }
  },
  "variables": {
    "vnetName": "devops-vnet",
    "managementSubnetName": "management-subnet",
    "directorySubnetName": "directory-subnet",
    "webSubnetName": "web-subnet",
    "dataSubnetName": "data-subnet",
    "jumpBoxVmName": "jama01",
    "dcVmName": "dc01",
    "dcIpAddress": "10.0.1.10",
    "jamaVmName": "jama01",
    "jamaIpAddress": "10.0.2.10",
    "tfsVmName": "tfs01",
    "tfsIpAddress": "10.0.2.20",
    "sqlVmName": "sql01",
    "sqlIpAddress": "10.0.3.10",
    "_artifactsLocation": "[deployment().properties.templateLink.uri]",
    "nestedTemplates": {
      "networkTemplate": "[uri(variables('_artifactsLocation'), concat('nestedtemplates/virtualNetwork.json'))]",
      "domainControllerTemplate": "[uri(variables('_artifactsLocation'), concat('nestedtemplates/domainController.json'))]",
      "jumpBoxTemplate": "[uri(variables('_artifactsLocation'), concat('nestedtemplates/jumpBox.json'))]",
      "sqlTemplate": "[uri(variables('_artifactsLocation'), concat('nestedtemplates/sqlServer.json'))]",
      "jamaTemplate": "[uri(variables('_artifactsLocation'), concat('nestedtemplates/jama.json'))]",
      "tfsTemplate": "[uri(variables('_artifactsLocation'), concat('nestedtemplates/tfs.json'))]"
    }
  },
  "resources": [
    {
      "name": "Network",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-08-01",
      "comments": "This creates the virtual network and subnets",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('nestedTemplates').networkTemplate]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vnetName": {
            "value": "[variables('vnetName')]"
          },
          "managementSubnetName": {
            "value": "[variables('managementSubnetName')]"
          },
          "directorySubnetName": {
            "value": "[variables('directorySubnetName')]"
          },
          "webSubnetName": {
            "value": "[variables('webSubnetName')]"
          },
          "dataSubnetName": {
            "value": "[variables('dataSubnetName')]"
          },
          "dnsServers": {
            "value": []
          }
        }
      }
    },
    {
      "name": "DomainController",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-08-01",
      "comments": "This creates the Domain Controller VM",
      "dependsOn": [
        "Microsoft.Resources/deployments/Network"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('nestedTemplates').domainControllerTemplate]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vmName": {
            "value": "[variables('dcVmName')]"
          },
          "vmSize": {
            "value": "[parameters('vmSize')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "domainName": {
            "value": "[parameters('domainName')]"
          },
          "ipAddress": {
            "value": "[variables('dcIpAddress')]"
          },
          "existingVnetName": {
            "value": "[variables('vnetName')]"
          },
          "existingSubnetName": {
            "value": "[variables('directorySubnetName')]"
          },
          "_artifactsLocation": {
            "value": "[parameters('_artifactsLocation')]"
          },
          "_artifactsLocationSasToken": {
            "value": "[parameters('_artifactsLocationSasToken')]"
          }
        }
      }
    },
    {
      "name": "UpdateDNS",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-08-01",
      "comments": "Updates the DNS setting on the vNet to use our new DC",
      "dependsOn": [
        "Microsoft.Resources/deployments/DomainController"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('nestedTemplates').networkTemplate]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vnetName": {
            "value": "[variables('vnetName')]"
          },
          "managementSubnetName": {
            "value": "[variables('managementSubnetName')]"
          },
          "directorySubnetName": {
            "value": "[variables('directorySubnetName')]"
          },
          "webSubnetName": {
            "value": "[variables('webSubnetName')]"
          },
          "dataSubnetName": {
            "value": "[variables('dataSubnetName')]"
          },
          "dnsServers": {
            "value": [
              "[variables('dcIpAddress')]"
            ]
          }
        }
      }
    },
    {
      "name": "JumpBox",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-08-01",
      "comments": "This creates the JumpBox VM",
      "dependsOn": [
        "Microsoft.Resources/deployments/UpdateDNS"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('nestedTemplates').jumpBoxTemplate]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vmName": {
            "value": "[variables('jumpBoxVmName')]"
          },
          "vmSize": {
            "value": "[parameters('vmSize')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "domainName": {
            "value": "[parameters('domainName')]"
          },
          "existingVnetName": {
            "value": "[variables('vnetName')]"
          },
          "existingSubnetName": {
            "value": "[variables('managementSubnetName')]"
          },
          "_artifactsLocation": {
            "value": "[parameters('_artifactsLocation')]"
          },
          "_artifactsLocationSasToken": {
            "value": "[parameters('_artifactsLocationSasToken')]"
          }
        }
      }
    },
    {
      "name": "SQLServer",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-08-01",
      "comments": "This creates the SQL Server VM",
      "dependsOn": [
        "Microsoft.Resources/deployments/UpdateDNS"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('nestedTemplates').sqlTemplate]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vmName": {
            "value": "[variables('sqlVmName')]"
          },
          "vmSize": {
            "value": "[parameters('vmSize')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "domainName": {
            "value": "[parameters('domainName')]"
          },
          "ipAddress": {
            "value": "[variables('sqlIpAddress')]"
          },
          "existingVnetName": {
            "value": "[variables('vnetName')]"
          },
          "existingSubnetName": {
            "value": "[variables('dataSubnetName')]"
          },
          "_artifactsLocation": {
            "value": "[parameters('_artifactsLocation')]"
          },
          "_artifactsLocationSasToken": {
            "value": "[parameters('_artifactsLocationSasToken')]"
          }
        }
      }
    },
    {
      "name": "JamaServer",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-08-01",
      "comments": "This creates the Jama VM",
      "dependsOn": [
        "Microsoft.Resources/deployments/SQLServer"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('nestedTemplates').jamaTemplate]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vmName": {
            "value": "[variables('jamaVmName')]"
          },
          "vmSize": {
            "value": "[parameters('vmSize')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "sshPublicKey": {
            "value": "[parameters('sshPublicKey')]"
          },
          "domainName": {
            "value": "[parameters('domainName')]"
          },
          "ipAddress": {
            "value": "[variables('jamaIpAddress')]"
          },
          "existingVnetName": {
            "value": "[variables('vnetName')]"
          },
          "existingSubnetName": {
            "value": "[variables('webSubnetName')]"
          },
          "existingSqlInstance": {
            "value": "[concat(variables('sqlVmName'), '.', parameters('domainName'))]"
          },
          "_artifactsLocation": {
            "value": "[parameters('_artifactsLocation')]"
          },
          "_artifactsLocationSasToken": {
            "value": "[parameters('_artifactsLocationSasToken')]"
          }
        }
      }
    },
    {
      "name": "TfsServer",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-08-01",
      "comments": "This creates the TFS VM",
      "dependsOn": [
        "Microsoft.Resources/deployments/SQLServer"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('nestedTemplates').tfsTemplate]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vmName": {
            "value": "[variables('tfsVmName')]"
          },
          "vmSize": {
            "value": "[parameters('vmSize')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "domainName": {
            "value": "[parameters('domainName')]"
          },
          "ipAddress": {
            "value": "[variables('tfsIpAddress')]"
          },
          "existingVnetName": {
            "value": "[variables('vnetName')]"
          },
          "existingSubnetName": {
            "value": "[variables('webSubnetName')]"
          },
          "existingSqlInstance": {
            "value": "[concat(variables('sqlVmName'), '.', parameters('domainName'))]"
          },
          "_artifactsLocation": {
            "value": "[parameters('_artifactsLocation')]"
          },
          "_artifactsLocationSasToken": {
            "value": "[parameters('_artifactsLocationSasToken')]"
          }
        }
      }
    }
  ]
}