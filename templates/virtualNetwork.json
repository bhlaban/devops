{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vnetName": {
      "type": "string",
      "metadata": {
        "description": "The name of the virtual network to create"
      }
    },
    "managementSubnetName": {
      "type": "string",
      "metadata": {
        "description": "The name of subnet to create for management tier"
      }
    },
    "directorySubnetName": {
      "type": "string",
      "metadata": {
        "description": "The name of subnet to create for directory tier"
      }
    },
    "applicationSubnetName": {
      "type": "string",
      "metadata": {
        "description": "The name of subnet to create for application tier"
      }
    },
    "dataSubnetName": {
      "type": "string",
      "metadata": {
        "description": "The name of subnet to create for data tier"
      }
    },
    "dnsServers": {
      "type": "array",
      "metadata": {
        "description": "List of DNS servers in the network"
      }
    },
    "jumpBoxPublicIpName": {
      "type": "string",
      "metadata": {
        "description": "The name of public IP address for JumpBox"
      }
    },
    "jamaPublicIpName": {
      "type": "string",
      "metadata": {
        "description": "The name of public IP address for Jama"
      }
    },
    "proGetPublicIpName": {
      "type": "string",
      "metadata": {
        "description": "The name of public IP address for ProGet"
      }
    },
    "sonarQubePublicIpName": {
      "type": "string",
      "metadata": {
        "description": "The name of public IP address for SonarQube"
      }
    },
    "tfsPublicIpName": {
      "type": "string",
      "metadata": {
        "description": "The name of public IP address for TFS"
      }
    }
  },
  "variables": {
    "managementNetworkSecurityGroupName": "[concat(parameters('vnetName'), '-', parameters('managementSubnetName'), '-nsg')]",
    "directoryNetworkSecurityGroupName": "[concat(parameters('vnetName'), '-', parameters('directorySubnetName'), '-nsg')]",
    "applicationNetworkSecurityGroupName": "[concat(parameters('vnetName'), '-', parameters('applicationSubnetName'), '-nsg')]",
    "dataNetworkSecurityGroupName": "[concat(parameters('vnetName'), '-', parameters('dataSubnetName'), '-nsg')]"
  },
  "resources": [
    {
      "name": "[parameters('jumpBoxPublicIpName')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2017-09-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "publicIPAllocationMethod": "Static"
      }
    },
    {
      "name": "[concat(parameters('jumpBoxPublicIpName'), '/Microsoft.Authorization/', parameters('jumpBoxPublicIpName'), '-lock')]",
      "type": "Microsoft.Network/publicIPAddresses/providers/locks",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[resourceId('Microsoft.Network/publicIPAddresses', parameters('jumpBoxPublicIpName'))]"
      ],
      "properties": {
        "level": "CanNotDelete",
        "notes": "Public IP address should not be deleted."
      }
    },
    {
      "name": "[parameters('jamaPublicIpName')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2017-09-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "publicIPAllocationMethod": "Static"
      }
    },
    {
      "name": "[concat(parameters('jamaPublicIpName'), '/Microsoft.Authorization/', parameters('jamaPublicIpName'), '-lock')]",
      "type": "Microsoft.Network/publicIPAddresses/providers/locks",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[resourceId('Microsoft.Network/publicIPAddresses', parameters('jamaPublicIpName'))]"
      ],
      "properties": {
        "level": "CanNotDelete",
        "notes": "Public IP address should not be deleted."
      }
    },
    {
      "name": "[parameters('proGetPublicIpName')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2017-09-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "publicIPAllocationMethod": "Static"
      }
    },
    {
      "name": "[concat(parameters('proGetPublicIpName'), '/Microsoft.Authorization/', parameters('proGetPublicIpName'), '-lock')]",
      "type": "Microsoft.Network/publicIPAddresses/providers/locks",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[resourceId('Microsoft.Network/publicIPAddresses', parameters('proGetPublicIpName'))]"
      ],
      "properties": {
        "level": "CanNotDelete",
        "notes": "Public IP address should not be deleted."
      }
    },
    {
      "name": "[parameters('sonarQubePublicIpName')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2017-09-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "publicIPAllocationMethod": "Static"
      }
    },
    {
      "name": "[concat(parameters('sonarQubePublicIpName'), '/Microsoft.Authorization/', parameters('sonarQubePublicIpName'), '-lock')]",
      "type": "Microsoft.Network/publicIPAddresses/providers/locks",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[resourceId('Microsoft.Network/publicIPAddresses', parameters('sonarQubePublicIpName'))]"
      ],
      "properties": {
        "level": "CanNotDelete",
        "notes": "Public IP address should not be deleted."
      }
    },
    {
      "name": "[parameters('tfsPublicIpName')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2017-09-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "publicIPAllocationMethod": "Static"
      }
    },
    {
      "name": "[concat(parameters('tfsPublicIpName'), '/Microsoft.Authorization/', parameters('tfsPublicIpName'), '-lock')]",
      "type": "Microsoft.Network/publicIPAddresses/providers/locks",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[resourceId('Microsoft.Network/publicIPAddresses', parameters('tfsPublicIpName'))]"
      ],
      "properties": {
        "level": "CanNotDelete",
        "notes": "Public IP address should not be deleted."
      }
    },
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[variables('managementNetworkSecurityGroupName')]",
      "apiVersion": "2018-01-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "securityRules": [
          {
            "name": "AllowRdpInbound",
            "properties": {
              "description": "Allow inbound RDP traffic from the Internet",
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "3389",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "10.0.0.128/25",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound",
              "sourcePortRanges": [],
              "destinationPortRanges": [],
              "sourceAddressPrefixes": [],
              "destinationAddressPrefixes": []
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[variables('directoryNetworkSecurityGroupName')]",
      "apiVersion": "2018-01-01",
      "location": "[resourceGroup().location]",
      "properties": {}
    },
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[variables('applicationNetworkSecurityGroupName')]",
      "apiVersion": "2018-01-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "securityRules": [
          {
            "name": "AllowHttpInbound",
            "properties": {
              "description": "Allow inbound 80 traffic from the Internet",
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "80",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "10.0.2.0/24",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound",
              "sourcePortRanges": [],
              "destinationPortRanges": [],
              "sourceAddressPrefixes": [],
              "destinationAddressPrefixes": []
            }
          },
          {
            "name": "AllowHttpsInbound",
            "properties": {
              "description": "Allow inbound 443 traffic from the Internet",
              "protocol": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "443",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "10.0.2.0/24",
              "access": "Allow",
              "priority": 110,
              "direction": "Inbound",
              "sourcePortRanges": [],
              "destinationPortRanges": [],
              "sourceAddressPrefixes": [],
              "destinationAddressPrefixes": []
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[variables('dataNetworkSecurityGroupName')]",
      "apiVersion": "2018-01-01",
      "location": "[resourceGroup().location]",
      "properties": {}
    },
    {
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[parameters('vnetName')]",
      "apiVersion": "2017-09-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Network/networkSecurityGroups/', variables('managementNetworkSecurityGroupName'))]",
        "[concat('Microsoft.Network/networkSecurityGroups/', variables('directoryNetworkSecurityGroupName'))]",
        "[concat('Microsoft.Network/networkSecurityGroups/', variables('applicationNetworkSecurityGroupName'))]",
        "[concat('Microsoft.Network/networkSecurityGroups/', variables('dataNetworkSecurityGroupName'))]"
      ],
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "10.0.0.0/16"
          ]
        },
        "subnets": [
          {
            "name": "[parameters('managementSubnetName')]",
            "properties": {
              "addressPrefix": "10.0.0.128/25",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('managementNetworkSecurityGroupName'))]"
              }
            }
          },
          {
            "name": "[parameters('directorySubnetName')]",
            "properties": {
              "addressPrefix": "10.0.1.0/27",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('directoryNetworkSecurityGroupName'))]"
              }
            }
          },
          {
            "name": "[parameters('applicationSubnetName')]",
            "properties": {
              "addressPrefix": "10.0.2.0/24",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('applicationNetworkSecurityGroupName'))]"
              }
            }
          },
          {
            "name": "[parameters('dataSubnetName')]",
            "properties": {
              "addressPrefix": "10.0.3.0/24",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('dataNetworkSecurityGroupName'))]"
              }
            }
          }
        ],
        "dhcpOptions": {
          "dnsServers": "[parameters('dnsServers')]"
        }
      }
    }
  ]
}